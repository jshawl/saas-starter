<!DOCTYPE html>
<html>
  <head>
    <title>Starter</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class="navbar navbar-expand-sm navbar-light bg-light">
      <div class="container-fluid d-flex">
        <a class="navbar-brand" href="<%= root_path %>">SaaS Starter</a>
        <ul class="navbar-nav">
          <% if current_user %>
            <li class="nav-item"><%= link_to "Account", account_path, class: 'nav-link' %></li>
            <li class="nav-item"><%= link_to "Log Out #{current_user.email}", destroy_user_session_path, method: :delete, class: 'nav-link' %></li>
          <% else %>
            <li class="nav-item"><%= link_to "Log In", new_user_session_path, class: 'nav-link' %></li>
            <li class="nav-item"><%= link_to "Sign Up", new_user_registration_path, class: 'nav-link' %></li>
          <% end %>
        </ul>
      </div>
    </nav>
    <div class='container'>
      <section>
        <%= yield %>
      </section>
    </div>
    <footer>
      <div class='container-fluid'>
      &copy; <%= Time.now.strftime("%Y") %> &middot;
      <%= link_to "Terms of Service", legal_terms_path %> &middot;
      <%= link_to "Privacy Policy", legal_privacy_path %>
      </div>
    </footer>
    <%= javascript_importmap_tags('/assets/application.js', shim: false) %>
  </body>
</html>
